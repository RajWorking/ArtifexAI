# Development
MOCK_MODE=false

# API
API_PORT=4000
CORS_ORIGIN=http://localhost:3000
REQUEST_TIMEOUT_MS=10000

# Disable SSL verification for development (self-signed certificates)
NODE_TLS_REJECT_UNAUTHORIZED=0

# Splunk MCP (defaults for /api/siem/connect and /api/siem/query)
SPLUNK_MCP_COMMAND=npx
SPLUNK_HOST=https://localhost:8089
SPLUNK_TOKEN=ADD_YOUR_SPLUNK_TOKEN_HERE
SPLUNK_VERIFY_SSL=false


# Anthropic API (for LLM hunt executor)
ANTHROPIC_API_KEY=ADD_YOUR_ANTHROPIC_API_KEY_HERE